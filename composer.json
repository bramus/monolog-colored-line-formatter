{
    "name": "bramus/monolog-colored-line-formatter",
    "description": "Colored Line Formatter for Monolog",
    "license": "MIT",
    "authors": [
        {
            "name": "Bramus Van Damme",
            "email": "bramus@bram.us",
            "homepage": "https://www.bram.us/"
        }
    ],
    "require": {
        "php": "^8.1",
        "bramus/ansi-php": "^3.0.3"
    },
    "require-dev": {
        "monolog/monolog": "^3.0",
        "phpunit/phpunit": "~7.0|^9.4",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Bramus\\Monolog\\": "src/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "cs-fix": "php-cs-fixer fix -v $1",
        "phpstan": "phpstan analyse --memory-limit 128M"
    }
}
